# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
  color_good = "#b0b5bd"
    color_degraded = "#e345ff"
    color_bad = "#E345ff"
    interval = 1
}

# order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "load"
order += "cpu_usage"
order += "memory"
order += "tztime local"

wireless _first_ {
  format_up = "W %quality %essid %ip"
    format_down = "W down"
    separator = false
    separator_block_width = 40
}

ethernet _first_ {
  format_up = "E %speed %ip"
    format_down = "E down"
    separator = false
    separator_block_width = 40
}

battery all {
  format = "%status %percentage %remaining"
    separator = false
    separator_block_width = 40
}

disk "/" {
  format = "D %avail"
    separator = false
    separator_block_width = 40
}

load {
  format = "L %1min"
    align = "left"
    separator = false
    separator_block_width = 40
}

cpu_usage {
  format = "CPU %usage"
    align = "left"
    separator = false
    separator_block_width = 40
}
memory {
  format = "%used / %total"
    threshold_degraded = "1G"
    format_degraded = "MEMORY < %available"
    align = "left"
    separator = false
    separator_block_width = 40
}

tztime local {
  format = "%a %d/%m  %H : %M"
    align = "left"
    separator = false
    separator_block_width = 40
}
