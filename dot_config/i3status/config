# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
  color_good = "#b0b5bd"
    color_degraded = "#e345ff"
    color_bad = "#E345ff"
    interval = 1
}

order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
order += "cpu_usage"
order += "memory"
order += "battery all"
order += "volume master"
order += "tztime local"

wireless _first_ {
  format_up = "W %quality %essid"
    format_down = "W down"
    separator = false
    separator_block_width = 40
}

ethernet _first_ {
  format_up = "E %speed"
    format_down = "E down"
    separator = false
    separator_block_width = 40
}

battery all {
  format = "%status %percentage %remaining"
    separator = false
    separator_block_width = 40
}

disk "/" {
  format = "%avail"
    separator = false
    separator_block_width = 40
}

cpu_usage {
  format = "CPU %usage"
    separator = false
    separator_block_width = 40
}
memory {
  format = "%used / %total"
    threshold_degraded = "1G"
    format_degraded = "MEMORY < %available"
    separator = false
    separator_block_width = 40
}

volume master {
  format = "V %volume"
    format_muted = "V %volume muted"
    device = "pulse"
    separator = false
    separator_block_width = 40
}

tztime local {
  format = "%a %d-%m   %H : %M"
    separator = false
    separator_block_width = 40
}
