# _______________________________ WORKSPACES

workspace_layout tabbed
# workspace_layout stacked
# workspace_auto_back_and_forth yes

# open new empty workspace
# bindsym $mod+Shift+n exec ~/.config/i3/scripts/empty_workspace.sh

# Switch to workspace
bindsym $mod+a    workspace  $ws1
bindsym $mod+o    workspace  $ws2
bindsym $mod+e    workspace  $ws3
bindsym $mod+u    workspace  $ws4
bindsym $mod+i    workspace  $ws5
bindsym $mod+1    workspace  $ws6
bindsym $mod+2    workspace  $ws7
bindsym $mod+3    workspace  $ws8
bindsym $mod+4    workspace  $ws9
bindsym $mod+5    workspace  $ws10

# Move focused container to workspace
bindsym $mod+Shift+a    move container to workspace  $ws1
bindsym $mod+Shift+o    move container to workspace  $ws2
bindsym $mod+Shift+e    move container to workspace  $ws3
bindsym $mod+Shift+u    move container to workspace  $ws4
bindsym $mod+Shift+i    move container to workspace  $ws5
bindsym $mod+Shift+1    move container to workspace  $ws6
bindsym $mod+Shift+2    move container to workspace  $ws7
bindsym $mod+Shift+3    move container to workspace  $ws8
bindsym $mod+Shift+4    move container to workspace  $ws9
bindsym $mod+Shift+5    move container to workspace  $ws10

# Set workspaces names
set $ws1 "1:a"
set $ws2 "2:o"
set $ws3 "3:e"
set $ws4 "4:u"
set $ws5 "5:i"
set $ws6 "6:1"
set $ws7 "7:2"
set $ws8 "8:3"
set $ws9 "9:4"
set $ws10 "10:5"

